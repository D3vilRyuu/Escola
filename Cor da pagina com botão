<body id="corpo">
    <button id="Azul" onclick="cor('blue')">BLUE</button>
    <button id="Vermelho" onclick="cor('red')">RED</button>
    <button id="Amarelo" onclick="cor('yellow')">YELLOW</button>
    <button id="Rosa" onclick="cor('pink')">PINK</button>
    <button id="Verde" onclick="cor('green')">GREEN</button>



    <script>

        function cor(color){
            var corpo = document.getElementById("corpo")

            corpo.style.backgroundColor = color 
        }

    </script>
